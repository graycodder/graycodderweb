rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all
    match /blog/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /portfolio/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
