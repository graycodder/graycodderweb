rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all
    match /blog/{document} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@graycodder.com';
    }
    
    match /portfolio/{document} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@graycodder.com';
    }
  }
}
