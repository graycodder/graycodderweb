rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public folders for blog and portfolio assets
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@graycodder.com';
    }
    match /portfolio/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@graycodder.com';
    }
    
    // Default: require admin for anything else
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'admin@graycodder.com';
    }
  }
}
