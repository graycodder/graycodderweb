rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public folders for blog and portfolio assets
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /portfolio/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default: require authentication for anything else
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
